@{
    ViewData["Title"] = "Home";
}
<!doctype html>
<html>
    <head>
        <title>@ViewData["Title"]</title>
        <style>
            html, body {
            }

            .container {
                display: flex;
                flex-direction: row;
                align-items: center;
                justify-content: center;
            }

            .container > button {
                margin: 0 2px 0 2px;
            }
        </style>
    </head>
    <body>
        <h1>@ViewData["Title"]</h1>
        <div class="container">
            <button onclick="goToAdmin()">Admin Panel</button>
            <button onclick="goToEmployee()">Employee Panel</button>
        </div>
        <script type="text/javascript">
            function goToAdmin() {
                window.location.href = "/admin";
            }
            function goToEmployee() {
                window.location.href = "/employee";
            }
        </script>
    </body>
</html>

